---
import Layout from '~/layouts/PageLayout.astro';
import { Schema } from 'astro-seo-schema';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Contact from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Assistência Técnica de TV em Belo Horizonte | Conserto de TV - TechBH',
  description: 'Assistência técnica especializada em conserto de TV em Belo Horizonte. Atendimento rápido, garantia no serviço e técnicos qualificados. Orçamento grátis!',
  openGraph: {
    title: 'Assistência Técnica de TV em Belo Horizonte - TechBH',
    description: 'Conserto e instalação de TV com técnicos especializados. Atendimento em toda BH com garantia e preço justo.',
    image: '/images/og-image.jpg',
    type: 'website',
  },
  canonical: 'https://techbh.com.br',
};
---

<Layout metadata={metadata}>
  <!-- Schema.org markup for Local Business -->
  <Schema
    item={{
      "@type": "LocalBusiness",
      "@context": "https://schema.org",
      name: "TechBH Assistência Técnica de TV",
      image: "/images/logo.jpg",
      telephone: "(31) 98765-4321",
      address: {
        "@type": "PostalAddress",
        streetAddress: "Rua dos Guajajaras, 123",
        addressLocality: "Belo Horizonte",
        addressRegion: "MG",
        postalCode: "30180-100",
        addressCountry: "BR"
      },
      geo: {
        "@type": "GeoCoordinates",
        latitude: -19.919052,
        longitude: -43.940080
      },
      openingHoursSpecification: [
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          opens: "09:00",
          closes: "19:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          dayOfWeek: "Saturday",
          opens: "09:00",
          closes: "13:00"
        }
      ],
      priceRange: "$$"
    }}
  />

  <main>
    <Hero>
      <Fragment slot="title">
        <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
          Assistência Técnica de TV em Belo Horizonte
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8">
          Conserto rápido e com garantia para todas as marcas de TV
        </p>
      </Fragment>
      <Fragment slot="actions">
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://wa.me/33648780116?text=Olá! Preciso de assistência técnica para minha TV" 
             class="btn btn-primary flex items-center gap-2" 
             target="_blank" 
             rel="noopener noreferrer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Solicitar Orçamento Grátis
          </a>
          <a href="#servicos" class="btn">
            Ver Nossos Serviços
          </a>
        </div>
      </Fragment>
    </Hero>

    <Features
      id="diferenciais"
      title="Por que Escolher a TechBH?"
      subtitle="Excelência em assistência técnica de TV"
      items={[
        {
          title: "Atendimento Rápido",
          description: "Agendamento no mesmo dia e solução ágil para seu problema, sem abrir mão da qualidade.",
          icon: "tabler:clock"
        },
        {
          title: "Garantia no Serviço",
          description: "Todos os reparos possuem garantia por escrito de até 90 dias, assegurando sua tranquilidade.",
          icon: "tabler:shield-check"
        },
        {
          title: "Técnicos Especializados",
          description: "Equipe local de BH com mais de 10 anos de experiência em reparo de TVs de todas as marcas.",
          icon: "tabler:certificate"
        },
        {
          title: "Preço Justo",
          description: "Orçamento grátis e transparente, sem surpresas ou custos adicionais.",
          icon: "tabler:coin"
        }
      ]}
    />

    <Features2
      id="sobre"
      title="Sobre a TechBH"
      subtitle="Referência em assistência técnica de TV em Belo Horizonte há mais de uma década"
      highlight="Nossa Expertise"
      items={[
        {
          title: '+5000 TVs',
          description: 'Mais de 5000 TVs consertadas com sucesso em Belo Horizonte e região',
          icon: 'tabler:device-tv',
        },
        {
          title: '98% Satisfação',
          description: 'Alto índice de satisfação dos nossos clientes com nossos serviços',
          icon: 'tabler:thumb-up',
        },
        {
          title: '10+ Anos',
          description: 'Mais de uma década de experiência no mercado de assistência técnica',
          icon: 'tabler:certificate',
        },
      ]}
    >
      <Fragment slot="content">
        <h3 class="text-2xl font-bold tracking-tight mb-4">Atendemos Todas as Marcas</h3>
        <p class="text-gray-600">
          Especialistas em reparo de Smart TVs, TVs LED, LCD, OLED e QLED de todas as marcas: Samsung, LG, Sony, 
          Philips, TCL, AOC e outras. Atendemos toda região de Belo Horizonte com serviço especializado e garantido.
        </p>
      </Fragment>
    </Features2>

    <Content
      id="servicos"
      title="Nossos Serviços"
      subtitle="Soluções profissionais para sua TV"
      isReversed={true}
      items={[
        {
          title: 'Conserto de TV',
          description: `
            ✓ Reparo de tela
            ✓ Problemas de imagem
            ✓ Falhas de ligação
            ✓ Defeitos de som
            
            A partir de R$100,00
          `,
          callToAction: {
            target: '_blank',
            text: 'Solicitar Orçamento',
            href: 'https://wa.me/33648780116?text=Olá! Preciso de um orçamento para conserto de TV',
            icon: 'tabler:brand-whatsapp',
          },
        },
        {
          title: 'Instalação de TV',
          description: `
            ✓ Instalação na parede
            ✓ Configuração inicial
            ✓ Conexão com internet
            ✓ Organização de cabos
            
            A partir de R$50,00
          `,
          callToAction: {
            target: '_blank',
            text: 'Agendar Instalação',
            href: 'https://wa.me/33648780116?text=Olá! Gostaria de agendar uma instalação de TV',
            icon: 'tabler:brand-whatsapp',
          },
        },
      ]}
    />

    <Contact
      id="contato"
      title="Fale Conosco"
      subtitle="Atendimento rápido em toda Belo Horizonte"
      inputs={{
        name: {
          label: "Nome",
          placeholder: "Seu nome completo",
          required: true
        },

        phone: {
          label: "Telefone",
          placeholder: "(31) 99999-9999",
          required: true
        },
        message: {
          label: "Mensagem",
          placeholder: "Descreva seu problema",
          required: true
        }
      }}
      contactInfo={{
        whatsapp: {
          number: "33648780116",
          text: "Olá! Preciso de assistência técnica para minha TV",
          directLink: `https://wa.me/33648780116?text=${encodeURIComponent("Olá! Preciso de assistência técnica para minha TV")}`
        },
        address: "Rua dos Guajajaras, 123, Centro - Belo Horizonte/MG",
        hours: "Segunda à Sexta: 09h - 19h | Sábado: 09h - 13h"
      }}
    />
  </main>
</Layout>